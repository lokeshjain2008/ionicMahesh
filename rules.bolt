// Functions

isSelfData(id){ auth != null && auth.uid == id}
isLoggedIn() {  auth != null}
isFather(){
  auth!=null && prior(root).child('users').child(auth.uid).child('role').val() == 'father';
}

// Data Type
type Menu{
	name: String,
  price: Number,
	desc: String,
  available: Boolean

	validate(){
    this.name != null &&
    this.price >0 &&
    this.desc.length <=140;
  }

}

path /menu {
  read(){
    isLoggedIn();
  }
  write(){
    isFather();
  }
}
// All individual Posts are writable by anyone.
path /menu/{id} is Menu {
  index(){
    ['available']
  }
}


// can be defined later
type User {
  email: String,
  profileImageURL: String,
  displayName: String,
  userId: String,

}

path /users {
  read(){
    isFather()
  }
}

path /users/{userId} is User{
	read(){
    isSelfData(userId)
  }
	write(){
    isSelfData(userId);
  }
}

// canteen
type Canteen {
