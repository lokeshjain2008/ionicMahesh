  owner: String;
  accountNumber: Number;
  desc: String;
}

path /canteen  is Canteen{
  read(){
    true;
  }
  write(){
    isFather();
  }

}

//order element
type Order{
  items: Menu[],
  amount: Number,
  status: Number,
}

type UserOrder{
  amount: Number,
  orders: Order[]
}

path /user-orders {
  read(){
    isFather()
  }
  write(){
    isFather()
  }
}

path /user-orders/{userId} is UserOrder{
  read(){
    isSelfData($userId)
  }
  create(){
    isSelfData($userId)
  }
  update(){
    isSelfData($userId) && prior(this).status!=2
  }
  delete(){
    isSelfData($userId) && prior(this).status!=2
  }
  //index(){ //how
  //  ['orders/$key/order/status']
  //}
}




path /tables {
  read(){
